
@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;
@{
    ViewData["Title"] = "Pending Electricity";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">

                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-eg1-1" role="tabpanel">
                            <div class="table-responsive">
                                <table id="myTable" class="display nowrap dataTable dtr-inline collapsed " style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" onchange="common.SelectAllCheckBox('chk-select-all');" id="chk-select-all" /></th>
                                            <th>SrNo</th>
                                            <th>MemberId</th>
                                            <th>Service</th>
                                            <th>Operator</th>
                                            <th>Number</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>TxnId</th>
                                            @*<th>ApiTxnId</th>*@
                                            <th>Date</th>
                                            <th>OprRef</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody-p-recharge">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="dv-btn" style="display:none;">
                            <input type="button" value="Check Status" style="display:none;" onclick="rc.UpdateStatus('Check Status','electricity')" class="btn btn-warning" />
                            <input type="button" value="Force Success" onclick="rc.UpdateStatus('Force Success','electricity')" class="btn btn-success" />
                            <input type="button" value="Force Failed" onclick="rc.UpdateStatus('Force Failed','electricity')" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>
<script src="~/CustomJS/Wallet.js"></script>
@section Scripts{

    <script>
        $(document).ready(function () {
            menu.BindBreadCrumb(0);
            rc.GetPendingRecharge('electricity');
        });
    </script>
}

